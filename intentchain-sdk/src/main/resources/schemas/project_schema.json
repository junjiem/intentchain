{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "intent-chain project schema",
  "type": "object",
  "required": [
    "name",
    "chain",
    "classifiers"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "enum": [
        1
      ],
      "default": 1,
      "description": "intent-chain project schema 文件版本，当前仅支持 1"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z][A-Za-z0-9_\\-]*$",
      "description": "项目名称"
    },
    "description": {
      "type": [
        "string",
        "null"
      ],
      "description": "项目的详细描述"
    },
    "configuration": {
      "type": [
        "object",
        "null"
      ],
      "description": "项目的配置",
      "additionalProperties": true
    },
    "chain": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "description": "分类器名称链"
    },
    "embedding": {
      "type": "object",
      "description": "Embedding的设置",
      "required": [
        "provider"
      ],
      "properties": {
        "provider": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_\\-]+$",
          "description": "Embedding提供者"
        },
        "configuration": {
          "type": [
            "object",
            "null"
          ],
          "description": "Embedding的配置",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "embedding_store": {
      "type": "object",
      "description": "Embedding Store的设置",
      "required": [
        "provider"
      ],
      "properties": {
        "provider": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_\\-]+$",
          "default": "duckdb",
          "description": "Embedding Store提供者"
        },
        "configuration": {
          "type": [
            "object",
            "null"
          ],
          "description": "Embedding Store的配置",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "llm": {
      "type": "object",
      "description": "LLM的设置",
      "required": [
        "provider",
        "configuration"
      ],
      "properties": {
        "name": {
          "type": "string",
          "default": "default",
          "description": "LLM名称"
        },
        "provider": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_\\-]+$",
          "description": "LLM提供者"
        },
        "configuration": {
          "type": "object",
          "description": "LLM的配置",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "reranking": {
      "type": "object",
      "description": "Reranking的设置",
      "required": [
        "provider"
      ],
      "properties": {
        "provider": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_\\-]+$",
          "description": "Reranking提供者"
        },
        "configuration": {
          "type": [
            "object",
            "null"
          ],
          "description": "Reranking的配置",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "classifiers": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "description": "Classifier的上下文集合",
      "items": {
        "type": "object",
        "required": [
          "name",
          "provider"
        ],
        "properties": {
          "name": {
            "type": "string",
            "default": "default",
            "description": "Classifier名称"
          },
          "description": {
            "type": [
              "string",
              "null"
            ],
            "description": "Classifier的详细描述"
          },
          "provider": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_\\-]+$",
            "default": "default",
            "description": "Classifier提供者"
          },
          "configuration": {
            "type": [
              "object",
              "null"
            ],
            "description": "Classifier的配置",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}